{
  "name": "stencil-app",
  "version": "1.0.0",
  "description": "Stencil boilerplate",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build-storybook": "build-storybook -s www",
    "build": "cross-env NODE_ENV=production stencil build --prerender --stats",
    "publish": "gh-pages -d www",
    "dev": "stencil build --dev --watch --serve",
    "lint": "run-p \"lint.ts\" \"lint.styles\"",
    "lint.styles": "stylelint \"src/**/*.css\"",
    "lint.ts": "tslint -p tsconfig.json -c tslint.json",
    "serve": "serve www -p 5000",
    "start": "run-p dev storybook",
    "storybook": "start-storybook -p 9006 -s www",
    "stylelint:fix": "stylelint --fix \"src/**/*.css\"",
    "test": "stencil test --spec --e2e --headless",
    "test.ci": "stencil test --spec --e2e --ci",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "test.unit": "stencil test --spec",
    "test.e2e": "stencil test --e2e --headless",
    "test.screenshot": "stencil test --e2e --screenshot"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "@stencil/core": "^1.3.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@stencil/postcss": "^1.0.1",
    "@storybook/addon-a11y": "^5.2.2",
    "@storybook/addon-knobs": "^5.2.0",
    "@storybook/addon-viewport": "^5.2.0",
    "@storybook/html": "5.2.0",
    "@types/autoprefixer": "^9.6.1",
    "@types/babel-core": "^6.25.6",
    "@types/cssnano": "^4.0.0",
    "@types/gh-pages": "^2.0.0",
    "@types/jest": "24.0.18",
    "@types/node": "^12.7.2",
    "@types/prettier": "^1.18.2",
    "@types/puppeteer": "^1.19.1",
    "@types/stylelint": "^9.10.1",
    "autoprefixer": "^9.6.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.0",
    "cssnano": "^4.1.10",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.4",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "puppeteer": "1.20.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^19.0.0",
    "tailwindcss": "^1.1.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "preset": "@stencil/core/testing"
  }
}
