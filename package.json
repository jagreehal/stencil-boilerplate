{
  "name": "stencil-app",
  "version": "1.0.0",
  "description": "Stencil boilerplate",
  "main": "dist/stencil-app.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --stats --prerender",
    "deploy": "gh-pages -d www",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\"",
    "lint": "sd concurrent \"npm run lint:ts\" \"npm run lint:styles\"",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.json",
    "serve": "stencil-dev-server",
    "serve:prod": "npm run build && serve ./www",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "@stencil/core": "0.7.5"
  },
  "devDependencies": {
    "@stencil/dev-server": "^0.0.18",
    "@stencil/postcss": "0.0.4",
    "@stencil/sass": "0.0.3",
    "@stencil/utils": "^0.0.4",
    "@types/jest": "^22.2.0",
    "autoprefixer": "^8.1.0",
    "cssnano": "^3.10.0",
    "gh-pages": "1.1.0",
    "husky": "^0.15.0-rc.9",
    "jest": "^22.4.2",
    "postcss-reporter": "5.0.0",
    "prettier": "^1.11.1",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^2.5.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
